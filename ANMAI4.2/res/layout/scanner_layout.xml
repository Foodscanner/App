<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
     >

    <Button
        android:id="@+id/scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/article_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:text="Scannen" 
        android:onClick="onClick"/>

    <EditText
        android:id="@+id/etBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/article_title"
        android:layout_marginLeft="17dp"
        android:background="@android:color/white"
        android:ems="10" />

    <EditText
        android:id="@+id/etTyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etBarcode"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:background="@android:color/white"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTyp"
        android:layout_below="@+id/etBarcode"
        android:layout_marginTop="29dp"
        android:text="@string/etTyp"
        android:textColor="@android:color/white"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etBarcode"
        android:layout_below="@+id/scanner"
        android:layout_marginTop="14dp"
        android:text="@string/etBarcode"
        android:textColor="@android:color/white"
        android:textSize="35dp" />

</RelativeLayout>
